@charset "utf-8";  

.jiedanPage{
	font-size: 16px;
}    
.pagination a {
    text-decoration: none;
    border: 1px solid #009176;
    color: #fff;
    background: #009176;
}

.pagination a, .pagination span {
    display: inline-block;
    /*padding: 0.1em 0.4em;*/
    margin-right: 15px;
	/*margin-bottom: 5px;*/
	/**我添加的*/
	width: 60px;
    height: 48px;
    line-height: 48px;
    text-align: center;
    border-radius: 4px;
}

.pagination .currentPage {
    background: #FFF;
    color: #000;
    border: 1px solid #009176;
}

.pagination .currentPage.prev, .pagination .currentPage.next{
	color:#FFF;
	border-color:#3adfcb;
	background-image: linear-gradient(-180deg, #3adfcb 0%, #1bbc9b 100%);
	/**我添加的*/
	width:70px;
	
}
/**我添加的*/
.pagination .prev, .pagination .next{
	width:70px;
}
/*付款弹窗*/
.paymoneybox{
	width:500px;
	height:300px;
	position: fixed;
	left:50%;
	top:50%;
	margin-left:-300px;
	margin-top:-200px;
	z-index: 10;
	background:#fff;
	padding:20px;
	border-radius:5px;
}
.paymoney_shadow{
	width:100%;
	height:140%;
	background:rgba(0,0,0,.5);
	position: absolute;
	left:0;
	top:0;
	z-index: 9;
}
.paymoneybox .title{
	width:100%;
	height:30px;
	border-bottom:1px solid #ccc;
}
.paymoneybox .title li{
	float:left;
}
.paymoneybox .title .paymoney_close{
	float:right;
	cursor: pointer;
}
.paymoneybox .content{
	width:100%;
	height:230px;
	border-bottom:1px solid #ccc;
}
.paymoneybox .bot{
	width:100%;
	height:30px;
}
.paymoneybox .bot li{
	margin:0 auto;
	margin-top:5px;
	margin-right:8px;
	width:130px;
}
@media screen and (max-width:900px) and (min-width:700px){
	.jiedanPage{
		bottom: 80px;
		right:9px;
	}
	.pagination span,.pagination a{
		margin-right:4px;
		height: 28px;
	    line-height: 28px;
	    text-align: center;
	}
}
